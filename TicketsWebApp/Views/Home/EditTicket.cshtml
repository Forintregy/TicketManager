@model TicketInputModel
@using Datalayer.Models
<div>
	<h2>Редактирование тикета</h2>
	<div class="row">
		<div class="col-md-6">
			<form asp-action="EditTIcket">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				@if (User.IsInRole("manager"))
				{
					<div class="form-group">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Priority" class="control-label"></label>
						<select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<TicketPriority>()"></select>
						<span asp-validation-for="Priority" class="text-danger"></span>
					</div>
				}
				else
				{
					@Html.HiddenFor(model => model.Name);
					@Html.HiddenFor(model => model.Description);
					@Html.HiddenFor(model => model.Priority);
				}
				<div class="form-group">
					<label asp-for="AssigneeId" class="control-label"></label>
					<select asp-for="AssigneeId" class="form-control" asp-items="@ViewBag.Users"></select>
					<span asp-validation-for="AssigneeId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="State" class="control-label"></label>
					<select asp-for="State" class="form-control" asp-items="Html.GetEnumSelectList<TicketState>()"></select>
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="form-group col-md-2">
						<input type="submit" value="Сохранить" class="btn btn-primary" />
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
